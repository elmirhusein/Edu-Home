@using EduHome.Core.Entities;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Slider
@{
    ViewData["Title"] = "Delete";
}

<div class="card">
    <div class="card-body">
        <img src="@Model.BackgroundUrl" style="width:200px" />
        <h4 class="card-maintitle">@Model.MainTitle</h4>
        <h4 class="card-title-title">@Model.Title</h4>
        <p class="card-title-desc">@Model.Description</p>
        <div class="d-flex flex-wrap gap-2">
            <form method="post" asp-route-id="@Model.Id">
                <button type="submit" class="btn btn-danger waves-effect waves-light">Delete</button>
                <a asp-area="EduHomeAdmin" asp-controller="Slider" asp-action="Index" class="btn btn-light waves-effect">Back to List</a>
            </form>
        </div>
    </div>
</div>


