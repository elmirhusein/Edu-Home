@model IEnumerable<Blog>
@using EduHome.Core.Entities;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Blog table</h4>
        <div class="table-responsive">
            <a asp-area="EduHomeAdmin" asp-controller="Blog" asp-action="Create" class="btn btn-success waves-effect waves-light">Create</a>
            <table class="table mb-0">

                <thead>
                    <tr>
                        <th>ImagePath</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>MessageBox</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var blog in Model)
                    {
                        <tr>
                            <td><img style="width:250px" src="@blog.ImagePath" /></td>
                            <td>@blog.Name</td>
                            <td>@blog.Date</td>
                            <td>@blog.Box</td>
                            <td>@blog.Description</td>
                            <td class="buttons" style="display:flex;gap:5px">
                                <a asp-action="Update" asp-route-id="@blog.Id" class="btn btn-info">Update</a>
                                <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        count++;
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>


